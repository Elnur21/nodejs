        <div class="modal-content">
          <div class="modal-header tit-up">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Create new course</h4>
          </div>
          <div class="modal-body customer-box">
            <form role="form" class="form-horizontal" method="POST" id="createCourse-form" action="/courses">
              <div class="form-group">
                <div class="col-sm-12">
                  <input name="role" class="form-control" id="" placeholder="<%= user.role %>" type="hidden">
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-12">
                  <input name="name" class="form-control" id="" placeholder="Course name" type="text">
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-12">
                  <input name="description" class="form-control" id="" placeholder="Course description" type="text">
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-12">
                  <select name="category" class="form-control" id="" placeholder="Course category" type="text">
                    <% for (let i = 0; i < categories.length; i++) { %>
                      <option value="<%= categories[i]._id %>"><%= categories[i].name %></option>
                    <% } %>
                  </select>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-10">
                  <button type="submit" form="createCourse-form" class="btn btn-light btn-radius btn-brd grd1">Submit</button>
                  <button type="button" class="btn btn-light btn-radius btn-brd grd1" data-dismiss="modal">Cancel</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
